{
  "name": "pm-detect",
  "version": "0.1.0",
  "description": "A CLI tool to detect the node package manager used in a project",
  "author": "Jack Westbrook <jack.westbrook@gmail.com>",
  "bin": {
    "pm-detect": "dist/cli.js"
  },
  "main": "dist/lib.js",
  "scripts": {
    "test": "vitest",
    "build": "tsc -p tsconfig.build.json && chmod +x dist/cli.js",
    "dev": "tsc -p tsconfig.build.json --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "release": "auto shipit -v"
  },
  "keywords": [
    "package-manager",
    "package",
    "manager",
    "detect",
    "cli"
  ],
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=20"
  },
  "license": "MIT",
  "bugs": "https://github.com/jackw/pm-detect/issues",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jackw/pm-detect.git"
  },
  "devDependencies": {
    "@auto-it/all-contributors": "^11.3.0",
    "@auto-it/first-time-contributor": "^11.3.0",
    "@auto-it/omit-commits": "^11.3.0",
    "@auto-it/released": "^11.3.0",
    "@eslint/js": "^9.32.0",
    "@tsconfig/node20": "^20.1.6",
    "@tsconfig/recommended": "^1.0.10",
    "@types/node": "^24.1.0",
    "auto": "^11.3.0",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.3.0",
    "prettier": "3.6.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.38.0",
    "vitest": "^3.2.4"
  },
  "auto": {
    "plugins": [
      "npm",
      "all-contributors",
      "first-time-contributor",
      [
        "omit-commits",
        {
          "labels": "skip-release"
        }
      ],
      "released"
    ],
    "onlyPublishWithReleaseLabel": true
  }
}
